<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductCatalog.Pages.MainPage"
             Title="Inicio">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">

            <Label Text="Catálogo de Productos"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <Button Text="Productos" Clicked="OpenProducts"/>
            <Button Text="Categorías" Clicked="OpenCategories"/>
            <Button Text="Proveedores" Clicked="OpenSuppliers"/>
            <Button Text="Marcas" Clicked="OpenBrands"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
