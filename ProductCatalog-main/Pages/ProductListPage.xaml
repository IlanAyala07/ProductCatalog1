<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductCatalog.Pages.ProductListPage"
             x:Name="Page"
             Title="Productos">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Nuevo" Command="{Binding NewCommand}"/>
        <ToolbarItem Text="Refrescar" Command="{Binding LoadCommand}"/>
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*" Padding="12">
        <Label Text="Solo activos (soft delete)" FontAttributes="Italic" />

        <CollectionView Grid.Row="1" ItemsSource="{Binding Items}" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="8" ColumnDefinitions="*,Auto">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" FontAttributes="Bold"/>
                            <Label Text="{Binding Description}" FontSize="12"/>
                            <Label Text="{Binding Price, StringFormat='Precio: {0:C2}'}" FontSize="12"/>
                        </VerticalStackLayout>

                        <HorizontalStackLayout Grid.Column="1" Spacing="8">
                            <Button Text="Editar"
                                    Command="{Binding BindingContext.EditCommand, Source={x:Reference Page}}"
                                    CommandParameter="{Binding .}"/>
                            <Button Text="Borrar"
                                    Command="{Binding BindingContext.DeleteCommand, Source={x:Reference Page}}"
                                    CommandParameter="{Binding .}"/>
                        </HorizontalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
