<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductCatalog.Pages.ProductEditPage"
             x:Name="Page"
             Title="Producto">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Entry Placeholder="Nombre" Text="{Binding EditableItem.Name}" />
            <Editor Placeholder="DescripciÃ³n" AutoSize="TextChanges" Text="{Binding EditableItem.Description}" />
            <Entry Placeholder="Precio (2 decimales)" Keyboard="Numeric" Text="{Binding EditableItem.Price}" />

            <HorizontalStackLayout Spacing="12">
                <Button Text="Guardar" Command="{Binding SaveCommand}"/>
