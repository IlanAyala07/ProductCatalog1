<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductCatalog.Pages.SupplierEditPage"
             Title="Proveedor">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Entry Placeholder="Nombre" Text="{Binding EditableItem.Name}"/>
        <Entry Placeholder="Email" Keyboard="Email" Text="{Binding EditableItem.Email}"/>
        <Entry Placeholder="Teléfono (máx 13)" Keyboard="Telephone" Text="{Binding EditableItem.Phone}"/>

        <HorizontalStackLayout Spacing="12">
            <Button Text="Guardar" Command="{Binding SaveCommand}"/>
            <Button Text="Cancelar" Command="{Binding CancelCommand}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
